---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Book a Consultation | Cece Law" description="Book a consultation with Cece Law.">
  <section class="section">
    <h1>Book a Consultation</h1>
    <p>Choose the booking option below to request a consultation time. Availability and response times are <strong>[FILL-IN]</strong>.</p>
    <p><a href="tel:3129220400" class="btn btn-primary" data-track="tel">Call Now</a> <a href="/contact" class="btn btn-secondary" data-track="primary-cta">Contact</a></p>
  </section>
  <section class="section card">
    <h2>Online Booking</h2>
    <p>Scheduling URL: <strong>[FILL-IN_BOOKING_LINK]</strong></p>
    <p><a href="[FILL-IN_BOOKING_LINK]" class="btn btn-primary" data-track="booking">Continue to Booking</a></p>
  </section>
</BaseLayout>
