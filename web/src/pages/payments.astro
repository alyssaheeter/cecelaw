---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Payments | Cece Law" description="Make a payment to Cece Law.">
  <section class="section">
    <h1>Payments</h1>
    <p>Use the approved payment method below. Contact our office before submitting payment if you have billing questions.</p>
    <p><a href="tel:3129220400" class="btn btn-primary" data-track="tel">Call Now</a> <a href="/contact" class="btn btn-secondary" data-track="primary-cta">Contact</a></p>
  </section>
  <section class="section card">
    <h2>Payment Portal</h2>
    <p>Payment platform: <strong>[FILL-IN_PAYMENT_PLATFORM]</strong></p>
    <p><a href="[FILL-IN_PAYMENT_LINK]" class="btn btn-primary" data-track="payments">Go to Payment Portal</a></p>
  </section>
</BaseLayout>
