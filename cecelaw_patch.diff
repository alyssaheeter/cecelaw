+/*
+ * Color tokens for Cece Law marketing site.
+ *
+ * We define canonical variables for the dark orchid colour palette provided
+ * by the user. Semantic tokens map these base colours to application
+ * contexts. When updating the palette, adjust the values here to ensure
+ * consistency across the site.
+ */
+
+:root {
+  /* Base palette */
+  --cl-black:       #000000;
+  --cl-graphite:    #161616;
+  --cl-plum-black:  #181315;
+  --cl-orchid-a:    #8a7cb7;
+  --cl-orchid-b:    #897cb6;
+  --cl-fog:         #e7e7e7;
+  --cl-silver:      #a4a4a4;
+
+  /* Semantic palette */
+  --bg:             var(--cl-black);
+  --surface:        var(--cl-graphite);
+  --text:           var(--cl-fog);
+  --muted:          var(--cl-silver);
+  --border:         var(--cl-plum-black);
+  --accent:         var(--cl-orchid-a);
+  --accent-2:       var(--cl-orchid-b);
+}
+
+@media (prefers-color-scheme: light) {
+  :root {
+    /* In light mode we invert the palette to maintain contrast. */
+    --bg:             var(--cl-fog);
+    --surface:        #e7e7e7;
+    --text:           var(--cl-black);
+    --muted:          var(--cl-silver);
+    --border:         var(--cl-silver);
+    --accent:         var(--cl-orchid-a);
+    --accent-2:       var(--cl-orchid-b);
+  }
+}
